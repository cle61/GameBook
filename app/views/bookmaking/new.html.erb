<%= form_for(@book, url: bookmaking_index_path, html: { method: :post }, id: 'new_book') do |f| %>

	<% @book.errors.full_messages.each do |msg| %>
		<%= msg %>
	<% end %>

	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title, class: 'form-control', length: {minimum: 5}, autofocus: true %>
	</div>

	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description, class: 'form-control', length: {minimum: 10} %>
	</div>

	<div class="field">
		<%= f.label :price %><br>
		<%= f.number_field :price, class: 'form-control' %>
	</div>

	<div class="actions">
		<%= f.submit "Enregistrer" %>
	</div>
<% end %>

<%= link_to 'Retour', bookmaking_index_path %>